[Unit]
Description=Bazzeye Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/bazzeye
ExecStart=/root/bazzeye/runtime/node/bin/node /root/bazzeye/server/dist/index.js
Restart=on-failure
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
