[Unit]
Description=Bazzeye Server (User Mode)
After=network.target

[Service]
Type=simple
# User service does not need User= directive as it runs as the calling user
WorkingDirectory=%h/bazzeye
# Check where 'node' is in your user path, or use absolute path
ExecStart=/usr/bin/node %h/bazzeye/server/dist/index.js
Restart=on-failure
Environment=NODE_ENV=production
Environment=PORT=8080
# Note: Non-root users cannot bind to port 80. Use 8080 or similar.

[Install]
WantedBy=default.target
